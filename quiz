  <script>
    const mapping = {
      A: {title: 'Teacher', text: 'You like talking, helping, and working with students.'},
      B: {title: 'Nurse / Doctor', text: 'You like helping people and working in a hospital.'},
      C: {title: 'Chef / Cook / Waiter', text: 'You like food, restaurants, and talking to customers.'},
      D: {title: 'Farmer / Builder / Driver', text: 'You like working outdoors and using tools.'},
      E: {title: 'Office Worker / Computer Operator', text: 'You like computers, documents, and quiet work.'}
    };

    function getAnswers() {
      const form = document.getElementById('quiz');
      const data = {};
      for (let i=1;i<=5;i++){
        const name = 'q'+i;
        const v = form.querySelector('input[name="'+name+'"]:checked');
        data[name] = v ? v.value : null;
      }
      return data;
    }

    function calculateResult() {
      const ans = getAnswers();
      // validate
      for (let i=1;i<=5;i++){
        if (!ans['q'+i]) return {error: 'Please answer all questions.'};
      }
      const counts = {A:0,B:0,C:0,D:0,E:0};
      for (let k in ans) counts[ans[k]]++;
      // find max
      const maxCount = Math.max(...Object.values(counts));
      const winners = Object.keys(counts).filter(k=>counts[k]===maxCount);
      return {counts, winners};
    }

    function showResult() {
      const r = calculateResult();
      const el = document.getElementById('result');
      if (r.error) {
        el.style.display = 'block';
        el.innerHTML = '<strong style="color:#b91c1c">'+r.error+'</strong>';
        return;
      }
      // handle tie
      if (r.winners.length === 1) {
        const k = r.winners[0];
        el.innerHTML = `<h3>Mostly ${k} → ${mapping[k].title}</h3><p>${mapping[k].text}</p>`;
      } else {
        // multiple winners — show all
        const titles = r.winners.map(x => `${x} → ${mapping[x].title}`).join('<br>');
        el.innerHTML = `<h3>Tie: ${r.winners.join(', ')}</h3><p>${titles}</p>`;
      }
      el.style.display = 'block';
      // scroll to result on small screens
      el.scrollIntoView({behavior:'smooth'});
    }

    document.getElementById('submitBtn').addEventListener('click', showResult);
    document.getElementById('resetBtn').addEventListener('click', ()=>{
      document.getElementById('quiz').reset();
      const el = document.getElementById('result'); el.style.display='none'; el.innerHTML='';
    });
  </script>
</body>
